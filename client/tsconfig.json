{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "isolatedModules": true,
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types",
            "../node_modules/@types",
            "./typings"
        ],
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "es6",
            "esnext",
            "es2018",
            "es2019"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": { "customMatcher": "\\.css$" }
            }
        ]
    }
}
